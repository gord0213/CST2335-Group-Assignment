<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mike.cst2335_group_assignment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HouseSettingsActivity"
            android:label="@string/title_activity_house_settings"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".LivingRoomActivity"
            android:label="@string/title_activity_living_room"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".HSGarageActivity"
            android:label="@string/title_activity_hsgarage" />

        <activity android:name=".HSHouseTempActivity"
            android:label="@string/title_activity_hshouse_temp"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity android:name=".HSOutsideTempActivity"
            android:label="@string/title_activity_hsoutside_temp" />

        <activity android:name=".HSHelpActivity"
            android:label="@string/title_activity_hshelp" />
    </application>

</manifest>